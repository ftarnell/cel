SUBDIRS		= include celcore celvm icel test 

all clean depend install:
	@for d in ${SUBDIRS}; do		\
		echo "$@ ==> $$d";		\
		${MAKE} -C $$d $@ || exit 1;	\
		echo "$@ <== $$d";		\
	done

.PHONY: all depend clean install
